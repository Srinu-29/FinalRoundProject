  <script>
    const htmlEditor = CodeMirror.fromTextArea(document.getElementById("htmlEditor"), {
      mode: "xml", lineNumbers: true
    });
    const cssEditor = CodeMirror.fromTextArea(document.getElementById("cssEditor"), {
      mode: "css", lineNumbers: true
    });
    const jsEditor = CodeMirror.fromTextArea(document.getElementById("jsEditor"), {
      mode: "javascript", lineNumbers: true
    });

    function updateOutput() {
      const html = htmlEditor.getValue();
      const css = `<style>${cssEditor.getValue()}</style>`;
      const js = `<script>${jsEditor.getValue()}<\/script>`;
      const frame = document.getElementById('output').contentWindow.document;
      frame.open();
      frame.write(html + css + js);
      frame.close();
    }

    htmlEditor.on("change", updateOutput);
    cssEditor.on("change", updateOutput);
    jsEditor.on("change", updateOutput);

    // Tab switching logic
    function showEditor(type) {
      const editors = ['html', 'css', 'js'];
      editors.forEach(editor => {
        const container = document.getElementById(`${editor}EditorContainer`);
        const tab = document.querySelector(`button[onclick="showEditor('${editor}')"]`);
        if (editor === type) {
          container.classList.add('active');
          tab.classList.add('active');
        } else {
          container.classList.remove('active');
          tab.classList.remove('active');
        }
      });
    }
    
     function submitExercise() {
  const html = htmlEditor.getValue();
  const css = cssEditor.getValue();
  const js = jsEditor.getValue();

  // Assign to hidden fields
  document.querySelector('input[name="htmlcode"]').value = html;
  document.querySelector('input[name="csscode"]').value = css;
  document.querySelector('input[name="jscode"]').value = js;
  
    return true; // Allow form to submit
}

    async function saveProgress() {
      const userId = document.getElementById("userId").value;
      const moduleId = document.getElementById("moduleId").value;
      const html = htmlEditor.getValue();
      const css = cssEditor.getValue();
      const js = jsEditor.getValue();

      try {
        const res = await fetch('/Exercise/saveProgress', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ userId, moduleId, html, css, js })
,
        });
        const result =  res.json();
        console.log("Inside sasavve eprpr")
        if (res.ok) {
          alert("Progress saved successfully!");
        } else {
          alert(result.error || "Failed to save progress.");
        }
      } catch (err) {
        alert("Network error. Please try again.");
      }
    }
  </script>
