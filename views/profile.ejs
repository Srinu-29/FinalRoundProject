<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <!-- Tailwind CSS -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@6.4.0/css/all.min.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="./styles.css">
    
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar shadow-md text-white p-4" style="background: #070054;">
        <div class="container mx-auto flex justify-between items-center">
            <div class="text-xl font-bold">TechLearn Solutions</div>
            <div class="flex items-center space-x-6">
                <a href="/dashboard" class="hover:text-gray-300 transition flex items-center">
                    <i class="fas fa-tachometer-alt mr-1"></i> Dashboard
                </a>
                <a href="/profile" class="hover:text-gray-300 transition flex items-center">
                    <i class="fas fa-user mr-1"></i> Profile
                </a>
                <a href="/logout" class="hover:text-gray-300 transition flex items-center">
                    <i class="fas fa-sign-out-alt mr-1"></i> Logout
                </a>
            </div>
        </div>
    </nav>

    <!-- Profile Content -->
    <div class="container mx-auto px-4 py-8">
        <div class="profile-container bg-white rounded-lg overflow-hidden">
            <!-- Profile Header -->
            <div class="profile-header"></div>
            
            <!-- Profile Info Section -->
            <div class="px-6 pt-0 pb-6">
                <div class="flex flex-col md:flex-row">
                    <!-- Profile Icon -->
                    <div class="flex flex-col items-center md:items-start md:w-1/3">
                        <div class="profile-icon rounded-full">
                            <i class="fas fa-user"></i>
                        </div>
                    </div>
                    
                    <!-- User Details -->
                    <div class="mt-6 md:mt-0 md:w-2/3">
                        <!-- Profile Info Cards -->
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-6">
                            <!-- Username -->
                            <div class="bg-gray-50 p-4 rounded-lg">
                                <div class="field-label mb-1">
                                    <i class="fas fa-user-tag mr-2 text-black"></i>Username
                                </div>
                                <div class="field-value" id="username-field"><%=Username%></div>
                            </div>
                            
                            <!-- Email -->
                            <div class="bg-gray-50 p-4 rounded-lg">
                                <div class="field-label mb-1">
                                    <i class="fas fa-envelope mr-2 text-black"></i>Email
                                </div>
                                <div class="field-value" id="email-field"><%=Email%></div>
                            </div>
                            
                            <!-- Mobile Number -->
                            <div class="bg-gray-50 p-4 rounded-lg">
                                <div class="field-label mb-1">
                                    <i class="fas fa-phone mr-2 text-black"></i>Mobile Number
                                </div>
                                <div class="field-value" id="mobile-field"><%= MN %></div>
                            </div>
                            
                            <!-- Member Since -->
                            <div class="bg-gray-50 p-4 rounded-lg">
                                <div class="field-label mb-1">
                                    <i class="fas fa-calendar-alt mr-2 text-black"></i>Member Since
                                </div>
                                <div class="field-value" id="member-since"><%=createdAt%></div>
                            </div>
                        </div>
                        
                        <!-- Additional Information -->
                        <div class="bio-container p-4 rounded-lg mt-6">
                            <% if (error) { %>
                                <p class="text-red-600 mb-4"><%= error %></p>
                            <% } %>
                            <% if (message) { %>
                                <p class="text-green-600 mb-4"><%= message %></p>
                            <% } %>
                            <h1 class="text-2xl font-bold mb-4">Your Profile</h1>
                            <p class="text-gray-600 mb-4">
                                <% if (!bio) { %>
                                    Bio: No bio set yet
                                <% } else { %>
                                    Bio: <%= bio %>
                                <% } %>
                            </p>
                            <form action="/profile/Bioupdate" method="POST">
                                <textarea 
                                    name="bio"
                                    placeholder="Give a short Description about YOU" 
                                    class="bio-textarea w-full h-32 p-4 text-lg border rounded-md focus:outline-none focus:ring focus:ring-gray-200 resize-y"
                                ><%= bio %></textarea>
                                <button 
                                    type="submit"
                                    class="bio-button px-4 py-2 rounded-md transition mt-2"
                                >
                                    Update my Bio
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Stats Section -->
        <div class="mt-8 bg-white rounded-lg shadow p-6">
            <h2 class="text-xl font-bold text-black mb-4">Your Progress</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div class="stats-card p-4 rounded-lg text-center">
                    <div class="text-3xl font-bold text-black">24</div>
                    <div class="text-sm text-gray-600">Completed Exercises</div>
                </div>
                <div class="stats-card p-4 rounded-lg text-center">
                    <div class="text-3xl font-bold text-black">85%</div>
                    <div class="text-sm text-gray-600">Average Success Rate</div>
                </div>
                <div class="stats-card p-4 rounded-lg text-center">
                    <div class="text-3xl font-bold text-black">12</div>
                    <div class="text-sm text-gray-600">Current Streak</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-black text-white py-6 mt-12">
        <div class="container mx-auto px-4 text-center">
            <p>Â© 2025 TechLearn Solutions. All rights reserved.</p>
            <div class="mt-2 flex justify-center space-x-4">
                <a href="#" class="text-gray-300 hover:text-white"><i class="fab fa-github"></i></a>
                <a href="#" class="text-gray-300 hover:text-white"><i class="fab fa-twitter"></i></a>
                <a href="#" class="text-gray-300 hover:text-white"><i class="fab fa-linkedin"></i></a>
            </div>
        </div>
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Profile page loaded');
        });
    </script>
</body>
</html>